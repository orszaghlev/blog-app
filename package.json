        "@material-ui/core": "^4.11.4",
        "@material-ui/data-grid": "^4.0.0-alpha.32",
        "@material-ui/icons": "^4.11.2",
        "@mui/material": "^5.0.6",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^11.2.7",
        "@testing-library/user-event": "^12.8.3",
        "@tinymce/tinymce-react": "^3.12.6",
        "bootstrap": "^5.0.2",
        "eslint": "^7.32.0",
        "firebase": "^9.0.1",
        "firebase-admin": "^9.11.1",
        "firebase-functions": "^3.15.5",
        "framer-motion": "^4.1.17",
        "grpc": "^1.24.11",
        "latinize": "^0.5.0",
        "loadtest": "^5.1.2",
        "node-sass": "^6.0.1",
        "prop-types": "^15.7.2",
        "react": "^17.0.2",
        "react-bootstrap": "^1.6.1",
        "react-dom": "^17.0.2",
        "react-fontawesome": "^1.7.1",
        "react-meta-tags": "^1.0.1",
        "react-modal-image": "^2.5.0",
        "react-responsive": "^9.0.0-beta.4",
        "react-router-dom": "^5.2.1",
        "react-scripts": "4.0.3",
        "react-share": "^4.4.0",
        "react-slugify": "=2.0.3",
        "use-dark-mode": "^2.3.1",
        "web-vitals": "^1.1.2"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --coverage --watchAll --detectOpenHandles",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "!<rootDir>/src/App.js",
            "!<rootDir>/src/index.js",
            "!<rootDir>/src/darkModeToggle.js",
            "!<rootDir>/src/toggle.js",
            "!<rootDir>/src/data/*.json",
            "!<rootDir>/src/fixtures/*.jsx",
            "!<rootDir>/src/hooks/*.jsx",
            "!<rootDir>/src/helpers/*.jsx",
            "!<rootDir>/src/services/Firebase.jsx"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "coverageReporters": [
            "html",
            "text"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
